                            <td> {{ jnt.getElo() }} </td>
                            <td> {{ jnt.getPais() }} </td>
                            <td> {{ jnt.getClub() }} </td>
                            <td> {{ jnt.getDni() }} </td>
                            <td> {{ jnt.getDataNaixament()|date('Y-m-d') }} </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
